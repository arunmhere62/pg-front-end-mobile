{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean RN Build",
            "type": "shell",
            "command": "Remove-Item",
            "args": [
                "-Recurse",
                "-Force",
                "@('android/app/.cxx', 'android/app/build', 'android/build', 'node_modules/.cache')",
                "-ErrorAction",
                "SilentlyContinue"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
